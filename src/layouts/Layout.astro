---
import '../styles/global.css';
import Sidebar from '../components/Sidebar.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="This is my personal website!" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Sidebar />
		<div class="container">
			<slot />
		</div>
	</body>
</html>

<style is:global>
	.title {
		width: 100%;
		background-size: cover;
		margin: 3rem 0 0 0;
	}

	.title h1 {
		margin: 0 0 1rem 0;
		font-size: 4rem;
		font-weight: 700;
		line-height: 56px;
	}

	.title p {
		font-size: 26px;
		margin: 0;
	}

	main {
		line-height: 1.6;
		margin: auto;
		width: 45rem;
		padding: 0 1.5rem;
	}

	main p {
		margin: 0 0 0.8rem 0;
	}

	main h2,
	main h3 {
		font-weight: 600;
		margin: 2rem 0 0.8rem 0;
	}

	main h2 {
		font-size: 2.3rem;
	}

	main h3 {
		font-size: 1.7rem;
	}
</style>
