---
import { Icon } from 'astro-icon';
---

<script>
	const sidebar = document.querySelector('.sidebar');
	const nav = document.querySelector('nav');

	const navLinks = nav.querySelectorAll('a');
	const currentURL = window.location.href;
	navLinks.forEach((link) => {
		if (link.href === currentURL) {
			link.classList.add('active');
		}
	});

	const mobileNavToggle = document.querySelector('.mobile-nav-toggle');
	mobileNavToggle.addEventListener('click', () => {
		sidebar.classList.toggle('mobile-nav-active');
		nav.classList.toggle('mobile-nav-active');
		mobileNavToggle.classList.toggle('mobile-nav-active');
	});
</script>

<Icon pack="bx" width="1.5rem" name="bx-menu" class="mobile-nav-toggle"/>

<div class="sidebar">
	<nav>
		<ul>
			<li><a href="/"><Icon pack="bx" width="1.5rem" name="bx-home" />Home</a></li>
			<li><a href="/projects"><Icon pack="bx" width="1.5rem" name="bx-code-block" />Projects</a></li>
			<li><a href="/contact"><Icon pack="bx" width="1.5rem" name="bx-envelope" />Contact</a></li>
		</ul>
		<ul>
			<li><a href="/settings"><Icon pack="bx" width="1.5rem" name="bx-cog" />Settings</a></li>
		</ul>
	</nav>
</div>

<style>
	.sidebar {
		position: fixed;
		min-width: var(--sidebar-width);
		background: var(--slate-600);
		height: 100%;
		z-index: 100;
		transition: all ease-in-out 0.5s;
	}

	nav {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		min-width: 100%;
		height: 100%;
		transition: all ease-in-out 0.5s;
	}

	.sidebar ul {
		list-style: none;
		padding: 1.3rem 0 1.3rem 0;
	}

	.sidebar svg {
		margin-right: 0.6rem;
	}

	.sidebar a {
		display: flex;
		align-items: center;
		padding: 0.7rem 15px;
		font-size: 15px;
		color: var(--slate-100);
		transition: all ease-in-out 0.3s;
	}

	.sidebar a:hover,
	.sidebar a:focus {
		color: #fff;
		text-decoration: none;
	}

	.sidebar .active {
		color: #fff;
		border-left: 2px solid var(--cyan-500);
	}

	@media (max-width: 1199px) {
		.sidebar,
		nav {
			transform: translateX(calc(var(--sidebar-width) * -1));
		}
	}

	.mobile-nav-toggle {
		position: fixed;
		right: 15px;
		top: 15px;
		border-radius: 50px;
		cursor: pointer;
		z-index: 101;
	}

	.mobile-nav-active,
	.mobile-nav-active nav {
		transform: translateX(0);
	}

	@media (min-width: 1200px) {
		.mobile-nav-toggle {
			display: none;
		}
	}

</style>
