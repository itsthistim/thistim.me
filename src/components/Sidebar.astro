---
import { Icon } from 'astro-icon';
---

<script>
	const nav = document.querySelector('.navbar');
	const navLinks = nav.querySelectorAll('a');
	const currentURL = window.location.href;
	navLinks.forEach((link) => {
		if (link.href === currentURL) {
			link.classList.add('active');
		}
	});
</script>

<div class="sidebar">
	<nav class="navbar">
		<ul class="top">
			<li><a href="/"><Icon pack="bx" width="1.5rem" name="bx-home" />Home</a></li>
			<li><a href="/projects"><Icon pack="bx" width="1.5rem" name="bx-code-block" />Projects</a></li>
			<li><a href="/contact"><Icon pack="bx" width="1.5rem" name="bx-envelope" />Contact</a></li>
		</ul>
		<ul class="bottom">
			<li><a href="/settings"><Icon pack="bx" width="1.5rem" name="bx-cog" />Settings</a></li>
		</ul>
	</nav>
</div>

<style>
	.sidebar {
		min-width: 160px;
	}

	nav {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		background: var(--slate-600);
		min-width: 160px;
		position: fixed;
		height: 100vh;
	}

	nav ul {
		list-style: none;
		padding: 1.3rem 0 1.3rem 0;
	}

	nav svg {
		margin-right: 0.3rem;
	}

	nav a,
	nav a:focus {
		display: flex;
		align-items: center;
		color: #a8a9b4;
		padding: 0.7rem 15px;
		font-size: 15px;
	}

	nav a:hover,
	nav a:focus {
		color: #fff;
		text-decoration: none;
		padding-left: 13px;
		transition: all ease-in-out 0.1s;
	}

	nav .active {
		color: #fff;
		border-left: 2px solid var(--cyan-500);
	}

	@media (max-width: 1199px) {
		.sidebar,
		nav {
			transform: translateX(-300px);
			min-width: 0;
			width: 0;
			transition: all ease-in-out 0.5s;
		}
	}
</style>
