---
import { Icon } from 'astro-icon/components';

interface Props {
	username: string;
	platform: string;
	size?: number;
	href?: string;
}

const { username, platform, size = 32, href } = Astro.props;

const Item = href ? 'a' : 'div';
---

<Item class="social" href={href} rel="me" target="_blank">
	<Icon class="platform-logo" name={platform} width={size} height={size} />
	<p class="username">{username}</p>
</Item>

<style>
	.social {
		background-image: linear-gradient(45deg, var(--cyan-50), var(--lavender-60));
		border-radius: 1rem;
		display: flex;
		align-items: center;
		width: 200px;
		height: 64px;
		color: white;
		text-decoration: none;
		transition: transform 300ms;
	}

	.social:hover {
		transform: translateY(-2px);
	}

	.platform-logo {
		color: white;
		margin: 1rem;
	}

	.username {
		font-size: 1rem;
		font-weight: 500;
		margin: 1rem;
	}

	@media (max-width: 575px) {
		.social {
			width: 100%;
		}
	}
</style>
