---
import Card from '../components/Card.astro';
import Layout from '../layouts/MainLayout.astro';

import siteImage from '../assets//site_code.png';
import koalaImage from '../assets//koala_chat.png';
import amazonPlusPlusImage from '../assets//amazon++.jpg';
import arcusImage from '../assets//arcus.jpg';

const planningImage = 'https://images.unsplash.com/photo-1542621334-a254cf47733d?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D';

const siteIcons = ['simple-icons:nodedotjs', 'simple-icons:astro'];
const koalaIcons = ['simple-icons:nodedotjs'];
const amazonPlusPlusIcons = ['simple-icons:nodedotjs', 'simple-icons:angular', 'simple-icons:mariadb'];
const arcusIcons = ['simple-icons:php', 'simple-icons:bootstrap', 'simple-icons:mariadb'];
---

<Layout title="Projects">
	<main>
		<section id="title" class="title">
			<h1>My <span class="text-gradient">Projects</span></h1>
			<h3>I'm always working on something new.</h3>
		</section>

		<div class="projects" transition:name="cards">
			<Card href="https://github.com/itsthistim/thistim.me" title="thistim.me" sub="This website" image={siteImage} icons={siteIcons} />
			<Card href="https://github.com/itsthistim/koala" title="koala" sub="A Discord bot" image={koalaImage} icons={koalaIcons} />
			<Card href="https://github.com/stiangglanda/onlineshop" title="Amazon++" sub="A school project" image={amazonPlusPlusImage} icons={amazonPlusPlusIcons} />
			<Card href="https://github.com/stiangglanda/Arcus" title="Arcus" sub="Another school project" image={arcusImage} icons={arcusIcons} />
			<Card title="Coming Soon" sub="More Projects" image={planningImage} />
		</div>
	</main>
</Layout>

<style>
	main {
		line-height: 1.6;
		max-width: 70%;
		margin: auto;
		padding: 0 1.5rem 3rem;
	}

	.projects {
		margin-top: 5rem;
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 1rem;
	}
</style>
