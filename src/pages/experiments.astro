---
import Card from '../components/Card.astro';
import Layout from '../layouts/MainLayout.astro';

let placeholder = 'https://via.placeholder.com/350x220';
---

<Layout title="Experiments">
	<main>
		<section id="title" class="title">
			<h1>My <span class="text-gradient">Experiments</span></h1>
			<h2>
				Exploring new ideas and technologies
			</h2>
			<h3>
				Here are some of the simpler things I've been working on.
			</h3>
		</section>

		<div class="articles">
			<Card title="Coming soon" sub="Work in progress" image={placeholder} />
			<Card title="Coming soon" sub="Work in progress" image={placeholder} />
			<Card title="Coming soon" sub="Work in progress" image={placeholder} />
		</div>
	</main>
</Layout>

<style>
	main {
		line-height: 1.6;
		max-width: 950px;
		margin: auto;
		padding: 0 1.5rem;
	}

	.articles {
		margin-top: 5rem;
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 1rem;
	}
</style>
